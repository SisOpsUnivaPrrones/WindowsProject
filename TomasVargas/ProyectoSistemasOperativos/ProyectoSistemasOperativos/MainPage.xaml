<Page
    x:Class="ProyectoSistemasOperativos.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoSistemasOperativos"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="btnInicioSesion" Content="Iniciar Sesion" HorizontalAlignment="Left" Margin="282,451,0,0" VerticalAlignment="Top" FontFamily="Global User Interface" FontSize="22" Click="Button_Click"/>
        <TextBox x:Name="txtUsuario" HorizontalAlignment="Left" Text="" VerticalAlignment="Top" Margin="282,248,0,0" Width="382"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="282,360,0,0" VerticalAlignment="Top" Width="382"/>
        <TextBlock HorizontalAlignment="Left" Margin="282,208,0,0" Text="Usuario" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Global User Interface" FontSize="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="282,322,0,0" Text="Contraseña" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Global User Interface" FontSize="22"/>

    </Grid>
</Page>
